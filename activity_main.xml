<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_image"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_text"
        android:text="Login here"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="#192DBC"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcome"
        android:layout_below="@+id/login_text"
        android:text="Welcome Back"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/credentials"
        android:layout_below="@+id/welcome"
        android:text="Enter your credential to login"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        />
    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/credentials"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edittext_styling"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:drawableStart="@drawable/vector_logo"
        android:drawablePadding="4dp"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/usernameEditText"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edittext_styling"
        android:hint="Password"
        android:inputType="textPassword"
        android:drawableStart="@drawable/pass_vector"
        android:drawablePadding="4dp"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pass_forget"
        android:text="forget your Password ?"
        android:backgroundTint="@android:color/transparent"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:layout_below="@+id/password"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login"
        android:layout_below="@+id/pass_forget"
        android:text="Login"
        android:textSize="28dp"
        android:layout_marginHorizontal="35dp"
        android:backgroundTint="#192DBC"
        android:layout_marginTop="18dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_acc"
        android:text="Create new account"
        android:backgroundTint="@android:color/transparent"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_below="@+id/login"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/continue_with"
        android:text="Or continue with"
        android:textColor="#192DBC"
        android:textStyle="bold"
        android:layout_below="@+id/create_acc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/continue_with"
    android:layout_marginTop="10dp"
    android:gravity="center">
        <ImageButton
            android:id="@+id/facebookButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:src="@drawable/fb"
            android:scaleType="centerInside"
            android:layout_below="@+id/continue_with"
            android:layout_marginLeft="85dp"
            android:layout_margin="10dp"
            />
        <ImageButton
            android:id="@+id/google"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:src="@drawable/google"
            android:scaleType="centerInside"
            android:layout_toRightOf="@+id/facebookButton"
            android:layout_below="@+id/continue_with"
            android:layout_margin="10dp"
            />
        <ImageButton
            android:id="@+id/apple"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:src="@drawable/apple"
            android:scaleType="centerInside"
            android:layout_toRightOf="@+id/google"
            android:layout_below="@+id/continue_with"
            android:layout_margin="10dp"
            />
        <ImageButton
            android:id="@+id/twitter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:src="@drawable/twitter"
            android:scaleType="centerInside"
            android:layout_toRightOf="@+id/apple"
            android:layout_below="@+id/continue_with"
            android:layout_margin="10dp"
            />


</LinearLayout>








</RelativeLayout>