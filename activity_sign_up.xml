<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_image"
    tools:context=".Sign_up_Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_account_text"
        android:text="Create Account"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="#192DBC"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="3dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_create"
        android:layout_below="@+id/create_account_text"
        android:text="Create an account so you can login"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="17dp"
        />
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/text_create"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edittext_styling"
        android:hint="Username"
        android:inputType="text"
        android:drawableStart="@drawable/vector_logo"
        android:drawablePadding="4dp"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/name"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edittext_styling"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:drawableStart="@drawable/email_logo"
        android:drawablePadding="4dp"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        />
    <EditText
        android:id="@+id/password1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/email"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edittext_styling"
        android:hint="Password"
        android:inputType="textPassword"
        android:drawableStart="@drawable/pass_vector"
        android:drawablePadding="4dp"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        />
    <EditText
        android:id="@+id/password2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/password1"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edittext_styling"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:drawableStart="@drawable/pass_vector"
        android:drawablePadding="4dp"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signup"
        android:layout_below="@+id/password2"
        android:text="Sign up"
        android:onClick="backtologin"
        android:textSize="28dp"
        android:layout_marginHorizontal="35dp"
        android:backgroundTint="#192DBC"
        android:layout_marginTop="50dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/have_acc"
        android:text="Already have an account"
        android:backgroundTint="@android:color/transparent"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:layout_below="@+id/signup"
        android:layout_centerInParent="true"
        android:layout_marginTop="18dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/continue_with"
        android:text="Or continue with"
        android:textColor="#192DBC"
        android:textStyle="bold"
        android:layout_below="@+id/have_acc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/continue_with"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <ImageButton
            android:id="@+id/facebookButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:src="@drawable/fb"
            android:scaleType="centerInside"
            android:layout_below="@+id/continue_with"
            android:layout_marginLeft="85dp"
            android:layout_margin="10dp"
            />
        <ImageButton
            android:id="@+id/google"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:src="@drawable/google"
            android:scaleType="centerInside"
            android:layout_toRightOf="@+id/facebookButton"
            android:layout_below="@+id/continue_with"
            android:layout_margin="10dp"
            />
        <ImageButton
            android:id="@+id/apple"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:src="@drawable/apple"
            android:scaleType="centerInside"
            android:layout_toRightOf="@+id/google"
            android:layout_below="@+id/continue_with"
            android:layout_margin="10dp"
            />
        <ImageButton
            android:id="@+id/twitter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:src="@drawable/twitter"
            android:scaleType="centerInside"
            android:layout_toRightOf="@+id/apple"
            android:layout_below="@+id/continue_with"
            android:layout_margin="10dp"
            />


    </LinearLayout>






</RelativeLayout>